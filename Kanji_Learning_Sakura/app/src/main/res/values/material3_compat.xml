<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Thiết lập shape token Material3 cơ bản dựa trên Material Components.
        Các style này giúp theme M3 tìm thấy tài nguyên `ShapeAppearance.*` khi
        thư viện chưa cung cấp sẵn.
    -->
    <style name="ShapeAppearance.Material3.Corner.Small"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.Material3.Corner.Medium"
        parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.Material3.Corner.Large"
        parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!--
        Javadoc-equivalent (XML comment): Bo góc mặc định 16dp mô phỏng
        ShapeAppearanceOverlay.Material3.Corner để tránh lỗi AAPT.
    -->
    <style name="ShapeAppearanceOverlay.Material3.Corner"
        parent="@style/ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Material3.Corner.Small"
        parent="@style/ShapeAppearance.Material3.Corner.Small">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Material3.Corner.Large"
        parent="@style/ShapeAppearance.Material3.Corner.Large">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Material3.Corner.Full"
        parent="@style/ShapeAppearanceOverlay.Material3.Corner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!--
           XML doc-style note: Cung cấp style Material3 cho MaterialButton dạng viền.
           Tham chiếu tới Widget.MaterialComponents để tránh lỗi thiếu tài nguyên.
       -->
    <style name="Widget.Material3.Button.Outlined"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Material3.Corner</item>
    </style>

    <!--
        XML doc-style note: Style Material3 mô phỏng ElevatedButton, dùng nền nâng.
        Sử dụng parent MaterialComponents mặc định để tương thích thư viện.
    -->
    <style name="Widget.Material3.Button.Elevated"
        parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Material3.Corner</item>
    </style>

    <!--
        XML doc-style note: Style Material3 cho FilledButton, sử dụng parent
        mặc định của MaterialComponents để loại bỏ lỗi thiếu style.
    -->
    <style name="Widget.Material3.Button.Filled"
        parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Material3.Corner</item>
    </style>

    <!--
        XML doc-style note: Style Material3 FilledTonalButton tái sử dụng
        MaterialComponents.Button để đảm bảo khả năng liên kết resource.
    -->
    <style name="Widget.Material3.Button.FilledTonal"
        parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Material3.Corner</item>
    </style>

</resources>