<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Thiết lập shape token Material3 cơ bản dựa trên Material Components.
        Các style này giúp theme M3 tìm thấy tài nguyên `ShapeAppearance.*` khi
        thư viện chưa cung cấp sẵn.
    -->
    <style name="ShapeAppearance.Material3.Corner.Small"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.Material3.Corner.Medium"
        parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.Material3.Corner.Large"
        parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!--
        Javadoc-equivalent (XML comment): Bo góc mặc định 16dp mô phỏng
        ShapeAppearanceOverlay.Material3.Corner để tránh lỗi AAPT.
    -->
    <style name="ShapeAppearanceOverlay.Material3.Corner"
        parent="@style/ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Material3.Corner.Small"
        parent="@style/ShapeAppearance.Material3.Corner.Small">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Material3.Corner.Large"
        parent="@style/ShapeAppearance.Material3.Corner.Large">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Material3.Corner.Full"
        parent="@style/ShapeAppearanceOverlay.Material3.Corner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>