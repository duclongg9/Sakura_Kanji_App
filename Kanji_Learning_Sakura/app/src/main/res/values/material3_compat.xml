<?xml version="1.0" encoding="utf-8"?>
<!-- Tạo các style tương thích Material3 dựa trên Material Components cho XML. -->
<resources>
    <style name="Widget.Material3.TextInputLayout.OutlinedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" />
    <style name="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu" />
    <style name="Widget.Material3.Button.FilledTonal" parent="@style/Widget.MaterialComponents.Button" />
    <style name="Widget.Material3.Button.Outlined" parent="@style/Widget.MaterialComponents.Button.OutlinedButton" />
    <style name="Widget.Material3.Button.Elevated" parent="@style/Widget.MaterialComponents.Button" />
    <style name="Widget.Material3.Button.TonalButton" parent="@style/Widget.MaterialComponents.Button" />
    <style name="Widget.Material3.CardView.Elevated" parent="@style/Widget.MaterialComponents.CardView" />
    <!--
       Javadoc-equivalent (XML comment): Kiểu nút Filled mô phỏng Material3 bằng cách
       kế thừa trực tiếp Button của Material Components.
   -->
    <style name="Widget.Material3.Button.Filled" parent="@style/Widget.MaterialComponents.Button" />
    <style name="Widget.Material3.CardView.Outlined" parent="@style/Widget.MaterialComponents.CardView" />

    <!--
        Thiết lập shape token Material3 cơ bản dựa trên Material Components.
        Các style này giúp theme M3 tìm thấy tài nguyên `ShapeAppearance.*` khi
        thư viện chưa cung cấp sẵn.
    -->
    <style name="ShapeAppearance.Material3.Corner.Small"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.Material3.Corner.Medium"
        parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.Material3.Corner.Large"
        parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!--
        Javadoc-equivalent (XML comment): Bo góc mặc định 16dp mô phỏng
        ShapeAppearanceOverlay.Material3.Corner để tránh lỗi AAPT.
    -->
    <style name="ShapeAppearanceOverlay.Material3.Corner"
        parent="@style/ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Material3.Corner.Small"
        parent="@style/ShapeAppearance.Material3.Corner.Small">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Material3.Corner.Large"
        parent="@style/ShapeAppearance.Material3.Corner.Large">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Material3.Corner.Full"
        parent="@style/ShapeAppearanceOverlay.Material3.Corner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
