<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Kanji_Learning_Sakura" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/hanabiPink</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/hanabiBlossom</item>
        <item name="colorOnPrimaryContainer">@color/hanabiInk</item>
        <item name="colorSecondary">@color/hanabiLilac</item>
        <item name="colorOnSecondary">@color/hanabiInk</item>
        <item name="colorSecondaryContainer">@color/hanabiLilacSoft</item>
        <item name="colorOnSecondaryContainer">@color/hanabiInk</item>
        <item name="colorSurface">@color/hanabiWhite</item>
        <item name="colorOnSurface">@color/hanabiInk</item>
        <item name="colorSurfaceVariant">@color/hanabiSurfaceVariant</item>
        <item name="colorOutline">@color/hanabiOutline</item>
        <item name="android:navigationBarColor">@color/hanabiWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Elevated</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Material3.Button.Outlined</item>
