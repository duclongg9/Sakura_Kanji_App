<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hanabiWhite">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/momoToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hanabiWhite"
        android:elevation="2dp"
        android:theme="@style/ThemeOverlay.Material3.Toolbar.Surface"
        app:title="@string/momo_title"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="72dp"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMomoDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/momo_description"
                android:textColor="@color/hanabiInk"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radioPlans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <RadioButton
                    android:id="@+id/radioPlanMonthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/momo_plan_monthly" />

                <RadioButton
                    android:id="@+id/radioPlanQuarterly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/momo_plan_quarterly" />

                <RadioButton
                    android:id="@+id/radioPlanYearly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/momo_plan_yearly" />
            </RadioGroup>

            <TextView
                android:id="@+id/tvStubNotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/hanabiInk"
                android:textSize="14sp"
                android:visibility="gone"
                android:text="@string/momo_status_stub_notice" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPayMomo"
                style="@style/Widget.Material3.Button.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/momo_button_pay"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCheckStatus"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/momo_button_check"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/tvCurrentOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/momo_no_order"
                android:textColor="@color/hanabiInk" />

            <TextView
                android:id="@+id/tvMomoStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/hanabiInk"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/momoProgress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
