<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hanabiWhite"
    android:padding="16dp">

    <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:id="@+id/spQuizJlpt"
        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_select_jlpt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:id="@+id/spQuizLevel"
        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_select_level"
        app:layout_constraintTop_toBottomOf="@id/spQuizJlpt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="12dp"/>

    <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:id="@+id/spLesson"
        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_select_lesson"
        app:layout_constraintTop_toBottomOf="@id/spQuizLevel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="12dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStartQuiz"
        style="?attr/materialButtonFilledTonalStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/action_start_quiz"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/spLesson"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
